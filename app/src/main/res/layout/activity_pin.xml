<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_create_pin"
    android:layout_height="match_parent"


    tools:context="dsign.example.com.dsigntest.MainActivity">

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Create PIN"
        android:id="@+id/button_new_pin"
        android:layout_marginBottom="86dp"
        android:layout_gravity="center"
        android:background="@drawable/signin_button"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_new_pin_text"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Please create PIN code to secure the application"
        android:layout_above="@+id/edittext_new_pin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"/>

    <EditText

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:maxLines="1"
        style="@style/EditTextStyleWhite"
        android:hint="Create PIN"
        android:id="@+id/edittext_new_pin"
        android:inputType="numberPassword"
        android:layout_marginBottom="114dp"
        android:layout_above="@+id/button_new_pin"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
