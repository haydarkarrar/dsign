<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="dsign.example.com.dsigntest.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#69F0AE">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/image_sign"
            android:layout_centerInParent="true"
            android:background="@drawable/imagesign"

            />

    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Choose file"
        android:id="@+id/choose_for_sign"
        android:layout_marginBottom="86dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/signin_button"
        android:layout_centerHorizontal="true"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:id="@+id/sign_instruction"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/choose_for_sign"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/next2"
        android:layout_gravity="center"
        android:id="@+id/arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"

        android:layout_alignBaseline="@+id/arrow"
        android:layout_alignBottom="@+id/arrow"
        android:layout_toLeftOf="@id/arrow"
        android:layout_marginStart="33dp"/>


</RelativeLayout>